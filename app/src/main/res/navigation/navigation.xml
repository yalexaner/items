<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/itemsFragment">

    <fragment
        android:id="@+id/itemsFragment"
        android:name="yalexaner.items.ui.ItemsFragment"
        android:label="ItemsFragment"
        tools:layout="@layout/fragment_items">
        <action
            android:id="@+id/action_itemsFragment_to_addingItemsFragment"
            app:destination="@id/addingItemsFragment" />
    </fragment>
    <fragment
        android:id="@+id/addingItemsFragment"
        android:name="yalexaner.items.ui.AddingItemsFragment"
        android:label="AddingItemsFragment"
        tools:layout="@layout/fragment_adding_items" >
        <action
            android:id="@+id/action_addingItemsFragment_to_itemsFragment"
            app:destination="@id/itemsFragment"
            app:popUpTo="@id/itemsFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>